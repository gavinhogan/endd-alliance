---
layout: base.njk
---
<section class="hero">
    <img src="{{ '/assets/favicon.png' | url }}" alt="ENDD Alliance Logo" class="hero-logo pulse-active">
    <h1>STRATEGIC REPOSITORY</h1>
    <p style="color: var(--text-secondary); max-width: 500px; margin: 0 auto;">Official tactical guides and
        operational procedures from <strong>ConfuzedCorp</strong> for the <strong>Knights of the End</strong> on
        <strong>2143</strong>.
    </p>
</section>

<nav class="card-grid">
    {% for tutorial in collections.tutorial %}
    <a href="{{ tutorial.url | url }}" class="card">
        <h3>{{ tutorial.data.emoji }} {{ tutorial.data.title }}</h3>
        <p>{{ tutorial.data.description }}</p>
    </a>
    {% endfor %}
</nav>
